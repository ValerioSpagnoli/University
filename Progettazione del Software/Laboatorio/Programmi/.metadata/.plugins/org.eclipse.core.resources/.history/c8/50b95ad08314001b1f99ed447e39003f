package esercizio_2;

public class Esercizio_2 {
	
	public static int [][] generaMatrice(int n, int m) {
		int [][] mat = new int [n][m];
		for(int i = 0; i < mat.length; i++) {
			for(int j = 0; j < mat[0].length; j++) {
				mat[i][j] = 100*Math.random();
			}
		}
		return mat;
	}
	
