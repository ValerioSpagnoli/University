package esercizio_1;

public class Esercizio_1 {
	
	public double [][] generaMatrice(int n, int m) {
		double [][] matrice = new double [n][m];
		return matrice;
	}
	
	public void stampaMatrice(double mat[][]){
		for(int i = 0; i < mat.length; i++) {
			for(int j = 0; j < mat[0].length; j++) {
				System.out.print(mat[i][j] + "%4d");
			}
			System.out.println();
		}
	}
	
	public void stampaArray(double v[]) {
		System.out.print("[ ");
		for(int i = 0; i < v.length; i++) {
			System.out.print(v[i] + " ");
		}
		System.out.println("]");
	}
	
	public double [] diagonale(double mat[][]) { 
		
		double []v;
		
		if(mat.length > mat[0].length) {
			v = new double[mat.length];
			for(int i = 0; i < mat.length; i++) {
				for(int j = 0; j < mat[0].length; j++) {
					if(i == j) v[i] = mat[i][j];
				}
			}
		}
		
		else {
			v = new double[mat[0].length];
			for(int i = 0; i < mat[0].length; i++) {
				for(int j = 0; j < mat[0].length; j++) {
					if(i == j) v[i] = mat[i][j];
				}
			}
		}
		return v;
	}
	
	public void sommaArray(double []v) {
		
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	

}







